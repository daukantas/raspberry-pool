
#disconnected {
    background: rgba(247,148,0, .8);
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0;
    left: 0;
    color: #FFF;
    text-shadow: #111 0px 1px 1px;
    font-size: 3em;
    bold()
    z-index: 1;

    div {
        position:absolute;
        width:400px;
        height:50px;
        line-height:50px;
        top:50%;
        left:50%;
        overflow:hidden;
        margin-top:-25px;
        margin-left:-150px;
        text-align:center;
    }
}
